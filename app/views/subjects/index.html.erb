<div>
  <div>
    <h1>
      List of all subjects
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new subject
    </h2>

    <form action="/insert_subject" method="post">
      <div>
        <label for="subject_course_num_box">
          Subject course num
        </label>

        <input type="text" id="subject_course_num_box" name="query_subject_course_num">
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="prof_name_box">
          Prof name
        </label>

        <input type="text" id="prof_name_box" name="query_prof_name">
      </div>

      <button>
        Create subject
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Subject course num
        </th>

        <th>
          Name
        </th>

        <th>
          Prof name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_subjects.each do |a_subject| %>
      <tr>
        <td>
          <%= a_subject.id %>
        </td>

        <td>
          <%= a_subject.subject_course_num %>
        </td>

        <td>
          <%= a_subject.name %>
        </td>

        <td>
          <%= a_subject.prof_name %>
        </td>

        <td>
          <%= time_ago_in_words(a_subject.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_subject.updated_at) %> ago
        </td>

        <td>
          <a href="/subjects/<%= a_subject.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
