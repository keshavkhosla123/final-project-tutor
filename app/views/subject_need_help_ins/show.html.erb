<div>
  <div>
    <h1>
      Subject <%= @the_subject_need_help_in.user.first_name %> needs help in
    </h1>

    <dl>
      <dt>
        Full Name
      </dt>
      <dd>
        <%= @the_subject_need_help_in.user.first_name + " " +  @the_subject_need_help_in.user.last_name%>
      </dd>

      <dt>
        Email
      </dt>
      <dd>
        <%= @the_subject_need_help_in.user.email%>
      </dd>

      <dt>
        Bio
      </dt>
      <dd>
        <%= @the_subject_need_help_in.user.bio%>
      </dd>
    </dl>
  </div>
</div>



      <table>
      <tr>
        <th>
          Subjects Needed Help In
        </th>
        <%if session.fetch(:user_id) == @the_subject_need_help_in.user.id %>
          <th>
              Delete Subject
            </th>
        <%end%>
         <% @list_of_all_subjects_user_needs_help_in.each do |sub| %>
        <tr>
          <td>
          <%=sub.subject.name%>
          </td>
          <%if session.fetch(:user_id) == @the_subject_need_help_in.user.id %>
            <td>
            <a href="/delete_subject_need_help_in/<%= @the_subject_need_help_in.id %>"> Delete subject need help in </a>
            </td>
          <%end%>
        </tr>
        <%end%>
      </table>
<div>
  <h2> Review of Tutor </h2>
    
    <form action="/post_comment2" method="post">
    
    <input type="hidden" name="posting_user_id_box" value=<%=session.fetch(:user_id)%>>
    <label for="comment">
    <input type="text" id="comment" name="query_comment">
    <input type="hidden" name="reviewed_user_id_box" value=<%=@the_subject_need_help_in.user.id%>>
    <input type="hidden" name="redirect_id" value=<%=@the_subject_need_help_in.id%>>
      <button>
        Post!
      </button>
    </form>
  </div>
  <div>

    <table>
    <tr>
      <th>Reviewer</th>
      <th>Review</th>

    </tr>
    <%@the_subject_need_help_in.user.reviews.each do |a_comment|%>
    <tr>
      <td>
      <%commenter = User.where(:id=>a_comment.user_id).at(0)%>
      <%=commenter.first_name%>
      </td>
      <td>
      <%=a_comment.body%>
      </td>
    </tr>
    <%end%>
    </table>

</div>



